<div class="landing-page">
  <!-- Hero Section -->
  <header class="hero">
    <div class="container">
      <div class="hero-content hero-content-left">
        <h1 class="hero-headline">10x Your Audience<br>10 Minutes a Day</h1>
        <h2>Automatically turn trending news into social media posts that grow your reach, influence, and following.</h2>

        <div class="cta-primary">
          <%= link_to "Start Growing Your Audience", new_user_registration_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Benefits Section -->
  <section class="benefits" id="benefits">
    <div class="container">
      <h2>Grow Your Visibility Without the Grind</h2>

      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <!-- Icon placeholder -->
          </div>
          <h3>Instantly Stay Ahead</h3>
          <p>Always be in the loop on the latest trends — without spending hours researching.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <!-- Icon placeholder -->
          </div>
          <h3>Speak in Your Voice</h3>
          <p>Posts reflect your expertise and tone — no cookie-cutter AI fluff.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <!-- Icon placeholder -->
          </div>
          <h3>Ready to Share. Everywhere.</h3>
          <p>Get platform-optimized posts for LinkedIn and Twitter with one click.</p>
        </div>

        <div class="benefit-card">
          <div class="benefit-icon">
            <!-- Icon placeholder -->
          </div>
          <h3>Be Consistently Present</h3>
          <p>Daily or weekly content keeps you top-of-mind with your audience — effortlessly.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- How It Works Section -->
  <section class="how-it-works" id="how-it-works">
    <div class="container">
      <h2>How TrendPost Works for You</h2>

      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Set Your Focus</h3>
          <p>Choose the topics and tone that matter to you — business, tech, startups, and more.</p>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <h3>AI Tracks What Matters</h3>
          <p>We monitor trending news and extract what’s relevant to your niche.</p>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <h3>Get Ready-to-Post Content</h3>
          <p>Receive curated, personalized content you can post in seconds.</p>
        </div>
      </div>
    </div>
  </section>
</div>
